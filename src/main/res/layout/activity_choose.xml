<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_choose"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="doctorw.classcircle.controller.activity.ChooseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="40dp">

            <Button
                android:id="@+id/choose_teacher"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.8"
                android:background="@drawable/icon_bg_teacher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="40dp">

            <Button
                android:id="@+id/choose_parent"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.8"
                android:background="@drawable/icon_bg_parent" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
